<div class="span10">
	<h2>Забыли пароль?</h2>

	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
	  <%= devise_error_messages! %>
	<div class="clearfix">
	  <%= f.label :email %>
	  <div class="input"><%= f.email_field :email %></div>
	</div>

	<div class="clearfix">
	  <div class="input"><%= f.submit "Отправить инструкции по восстановлению пароля", :class => "btn success" %></div>
	</div>
	<% end %>

	<%= render :partial => "devise/shared/links" %>
</div>
	<div class="span10">
		<h2>Войти</h2>

		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div class="clearfix">
		  <%= f.label :email %>
		  <div class="input"><%= f.email_field :email %></div>
		</div>

		<div class="clearfix">
		  <%= f.label :password %><br />
		  <div class="input"><%= f.password_field :password %></div>
		</div>

		<div class="clearfix">
		  <% if devise_mapping.rememberable? -%>
		   	<%= f.label :remember_me %>
		    <div class="input"><%= f.check_box :remember_me %></div>
		  <% end -%>
		</div>

		<div class="clearfix">
		  <div class="input"><%= f.submit "Войти", :class => "btn success" %></div>
		<% end %>
		</div>

		<%= render :partial => "devise/shared/links" %>
	</div>


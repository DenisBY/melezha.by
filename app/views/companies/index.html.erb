<div class="span14">
  <h1>Ваши компании</h1>

  <table class="">
  <% @companies.each do |company| %>
  <tr>
      <td class="span14">
        <strong><%= company.title %></strong><br />
        <%= company.overview %>

      </td>
      <td><%= link_to 'Редактировать', edit_company_path(company), :class => "btn primary" %></td>
      <td><%= link_to 'Удалить', company, confirm: 'Вы уверены?', method: :delete, :class => "btn danger" %></td>
  </tr>
  <% end %>
  </table>
  <br />

  <div align="right"><%= link_to 'Добавить компанию', new_company_path, :class => "btn success" %></div>
</div>